{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"frame": {
		// "scope": "tex",
		"prefix": "frame",
		"body": [
			"\\begin{frame}[c]{}",
			"\t\\footnotesize",
			"\t",
			"\\end{frame}"
		],
		"description": "Quick input FEAME"
	},
	"figure": {
		// "scope": "tex",
		"prefix": "figure",
		"body": [
			"\\begin{figure}",
			"\t\\centering",
			"\t\\includegraphics[width=0.8\\linewidth]{}",
			"\t\\%caption{}",
			"\\end{figure}"
		],
		"description": "Quick input figure"
	},
	"column": {
		// "scope": "tex",
		"prefix": "column",
		"body": [
			"\\begin{columns}[onlytextwidth]",
			"\t\\begin{column}{.5\\textwidth}",
			"\t\t",
			"\t\\end{column}",
			"\t\\begin{column}{.5\\textwidth}",
			"\t\t",
			"\t\\end{column}",
			"\\end{columns}"
		],
		"description": "Quick input column"
	},
	"exemple": {
		// "scope": "tex",
		"prefix": "example",
		"body": [
			"\\begin{exampleblock}{title}",
			"\t",
			"\\end{exampleblock}"
		],
		"description": "Quick input exemple"
	},
	"item": {
		// "scope": "tex",
		"prefix": "item",
		"body": [
			"\\begin{itemize}",
			"\t\\item",
			"\\end{itemize}"
		],
		"description": "Quick input item"
	},
	"equation": {
		// "scope": "tex",
		"prefix": "equation",
		"body": [
			"\\begin{equation*}",
			"\t",
			"\\end{equation*}"
		],
		"description": "Quick input equation"
	},
	"minipage": {
		// "scope": "tex",
		"prefix": "minipage",
		"body": [
			"\\begin{equation*}",
			"\t\\begin{minipage}[t][0.45\\textheight][t]{\\textwidth}",
			"\t    \\frametitle{上半部分标题}",
			"\t    \\begin{itemize}",
			"\t      \\item 这是上半部分的内容。",
			"\t    \\end{itemize}",
			"\t    \\centering",
			"\t    \\includegraphics[width=0.5\\textwidth]{example-image-a} % 示例图片",
			"\t  \\end{minipage}",
			"",
			"\t  \\vfill % 在上下部分之间添加弹性垂直空间",
			"",
			"\t  % 下半部分",
			"\t  \\begin{minipage}[b][0.45\\textheight][t]{\\textwidth}",
			"\t    \\frametitle{下半部分标题}",
			"\t    \\begin{itemize}",
			"\t      \\item 这是下半部分的内容。",
			"\t    \\end{itemize}",
			"\t    \\centering",
			"\t    \\includegraphics[width=0.5\\textwidth]{example-image-b} % 示例图片",
			"\t\\end{minipage}",
			"\\end{equation*}",
		],
		"description": "Quick input minipage"
	}
}
